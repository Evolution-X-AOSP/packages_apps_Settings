<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:title="@string/gesture_silence_title">

    <com.android.settings.widget.VideoPreference
        android:key="gesture_silence_video"
        app:animation="@raw/gesture_silence"
        app:preview="@drawable/gesture_silence" />

    <SwitchPreference
        android:key="gesture_silence"
        android:summary="@string/gesture_silence_summary"
        android:title="@string/gesture_silence_title"
        app:allowDividerAbove="true"
        app:controller="com.google.android.settings.aware.SilenceGesturePreferenceController"
        app:keywords="@string/keywords_gesture_silence" />

    <com.android.settingslib.widget.FooterPreference
        android:key="silence_gesture_footer"
        android:selectable="false"
        android:title="@string/gesture_silence_footer"
        app:controller="com.google.android.settings.aware.SilenceGestureFooterPreferenceController"
        app:searchable="false" />

</PreferenceScreen>
