<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/hats_white_button"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="@dimen/hats_lib_survey_answer_height"
    android:paddingLeft="@dimen/hats_lib_survey_horizontal_padding"
    android:paddingRight="@dimen/hats_lib_survey_horizontal_right_padding">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@id/hats_lib_multiple_select_checkbox"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:drawableLeft="@android:color/transparent"
        android:drawablePadding="16.0dip"
        android:focusable="false"
        android:layout_gravity="center_vertical"
        android:saveEnabled="false"
        android:textColor="@color/hats_lib_survey_text_color"
        android:textSize="@dimen/hats_lib_survey_answer_font_size"
        app:buttonTint="@color/hats_lib_checkbox_tint" />

</FrameLayout>
