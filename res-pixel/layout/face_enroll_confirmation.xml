<?xml version="1.0" encoding="utf-8"?>
<com.google.android.setupdesign.GlifLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/face_enroll_confirmation"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    style="@style/FaceLayoutTheme">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        style="@style/SudContentFrame">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:gravity="center"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@id/face_enrolled_anim"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/face_enroll_icon_large" />

                <ImageView
                    android:id="@id/face_check"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/face_enroll_check" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.setupdesign.GlifLayout>
