<?xml version="1.0" encoding="utf-8"?>
<com.google.android.setupdesign.GlifLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:icon="@drawable/ic_quick_tap"
    app:sucHeaderText="@string/columbus_gesture_training_action_title">

    <RadioGroup
        android:id="@id/actions"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        style="@style/SudContentFrame">

        <com.google.android.settings.gestures.columbus.ColumbusRadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/columbus_list_item_text_spacing"
            android:paddingVertical="@dimen/columbus_action_list_item_spacing_vertical"
            android:text="@string/columbus_setting_action_screenshot_title"
            android:textAppearance="?android:textAppearanceListItem"
            app:secureValue="@string/columbus_setting_action_screenshot_value" />

        <com.google.android.settings.gestures.columbus.ColumbusRadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/columbus_list_item_text_spacing"
            android:paddingVertical="@dimen/columbus_action_list_item_spacing_vertical"
            android:text="@string/columbus_setting_action_assistant_title"
            android:textAppearance="?android:textAppearanceListItem"
            app:secureValue="@string/columbus_setting_action_assistant_value" />

        <com.google.android.settings.gestures.columbus.ColumbusRadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/columbus_list_item_text_spacing"
            android:paddingVertical="@dimen/columbus_action_list_item_spacing_vertical"
            android:text="@string/columbus_setting_action_play_pause_title"
            android:textAppearance="?android:textAppearanceListItem"
            app:secureValue="@string/columbus_setting_action_play_pause_value" />

        <com.google.android.settings.gestures.columbus.ColumbusRadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/columbus_list_item_text_spacing"
            android:paddingVertical="@dimen/columbus_action_list_item_spacing_vertical"
            android:text="@string/columbus_setting_action_overview_title"
            android:textAppearance="?android:textAppearanceListItem"
            app:secureValue="@string/columbus_setting_action_overview_value" />

        <com.google.android.settings.gestures.columbus.ColumbusRadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/columbus_list_item_text_spacing"
            android:paddingVertical="@dimen/columbus_action_list_item_spacing_vertical"
            android:text="@string/columbus_setting_action_notification_title"
            android:textAppearance="?android:textAppearanceListItem"
            app:secureValue="@string/columbus_setting_action_notification_value" />

        <com.google.android.settings.gestures.columbus.ColumbusRadioButton
            android:id="@id/launch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/columbus_list_item_text_spacing"
            android:paddingVertical="@dimen/columbus_action_list_item_spacing_vertical"
            android:text="@string/columbus_setting_action_launch_title"
            android:textAppearance="?android:textAppearanceListItem"
            app:secureValue="@string/columbus_setting_action_launch_value" />

    </RadioGroup>

</com.google.android.setupdesign.GlifLayout>
